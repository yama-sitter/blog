---
import type { Post } from '@data/post';
import Date from "@components/utilities/Date";
const post: Post = Astro.props.post
---

<div class="py-6 flex flex-row-reverse justify-between md:gap-10 items-start">
	{post.img &&
		<a href={`/${post.slug}`} class="shrink-0">
			<img src={post.img} alt={post.title} width="160" height="160" class="w-20 h-20 md:w-40 md:h-40 rounded bg-base-200 object-cover" />
		</a>
	}
	<div class="flex flex-col gap-4">
		<h2 class="text-2xl font-bold">
			<a class="hover:underline" href={`/${post.slug}`}>{post.title}</a>
		</h2>
		<span class="badge badge-ghost">
			<Date date={post.date}/>
		</span>
		<p class="text-sm text-base-content/70">{post.desc}</p>
	</div>
</div>
