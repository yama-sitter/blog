---
import "../../style/global.css";
import { Head } from "@tmp-components/Head";
import { OGP } from "@tmp-components/OGP";
import { Navbar } from "@tmp-components/Navbar";
import { Footer } from "@tmp-components/Footer"
import { CopyRight } from "@tmp-components/CopyRight"
import { TWITTER_ACCOUNT_ID, TWITTER_ACCOUNT_URL } from "@constants";

const { title, description, image } = Astro.props;
const url = Astro.site
const year = new Date().getFullYear()
---

<html lang="ja">
	<Head>
    <OGP title={title} description={description} image={image} url={url} />
  </Head>
	<body class="flex flex-col items-center h-screen h-[100svh]">
    <main class="w-full max-w-3xl flex-grow">
      <Navbar />
      <div class="p-4 pb-10">
        <slot />
      </div>
    </main>
		<Footer>
			<CopyRight year={year} author={TWITTER_ACCOUNT_ID} link={TWITTER_ACCOUNT_URL} />
		</Footer>
	</body>
</html>
